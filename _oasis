  CompiledObject:   best

Test "inotify"
  Command:          $test_inotify

Executable "test_inotify_lwt"
  Build$:           flag(tests) && flag(lwt)
  Install:          false
  Path:             lib_test
  MainIs:           test_inotify_lwt.ml
  BuildDepends:     oUnit (>= 2.0), fileutils (>= 0.4.4), inotify.lwt
  CompiledObject:   best

Test "inotify_lwt"
  Run$:             flag(lwt)
  Command:          $test_inotify_lwt -runner sequential

